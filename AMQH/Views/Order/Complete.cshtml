
@{
    ViewBag.Title = "Complete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model AMQH.Models.BookModel.OrderHeaders

<div class="row navbar-right" style="margin-top:20px;">
    <div class="right panel-heading">
        <img src="~/common/img/cart-round.svg" />
        @Html.ActionLink("查看购物车", "Index", "ShopCart")
    </div>
</div>
@using (Html.BeginForm())
{
    <fieldset class="container" style="margin-top:15px;">
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.Id)
        <legend style="margin-top:20px;">填写订单相关信息</legend>

        <div class="editor-label col-md-offset-5">
            @Html.LabelFor(model => model.ContactName)
        </div>
        <div class="editor-field col-md-offset-5">
            @Html.EditorFor(model => model.ContactName)
            @Html.ValidationMessageFor(model => model.ContactName)
        </div>

        <div class="editor-label col-md-offset-5">
            @Html.LabelFor(model => model.ContactPhone)
        </div>
        <div class="editor-field col-md-offset-5">
            @Html.EditorFor(model => model.ContactPhone)
            @Html.ValidationMessageFor(model => model.ContactPhone)
        </div>

        <div class="editor-label col-md-offset-5">
            @Html.LabelFor(model => model.ContactAddress)
        </div>
        <div class="editor-field col-md-offset-5">
            @Html.EditorFor(model => model.ContactAddress)
            @Html.ValidationMessageFor(model => model.ContactAddress)
        </div>

        <div class="editor-label col-md-offset-5">
            @Html.LabelFor(model => model.Remark)
        </div>
        <div class="editor-field col-md-offset-5">
            @Html.EditorFor(model => model.Remark)
            @Html.ValidationMessageFor(model => model.Remark)
        </div>
        <p class="col-md-offset-5">
            <input type="submit" value="完成订单" />
        </p>
    </fieldset>
}


