@model AMQH.Models.BookModel.Login
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)

    <fieldset class="container" style="margin-top:100px;">
        <div class="row">
            <div class="col-md-6">
                <label style="font-size:15px; margin-left:20px;">用户名：</label>
                <div style="margin-top:10px">
                    @Html.EditorFor(model => model.Phone, new { data_val_phone = "请输入手机号码" })
                    @Html.ValidationMessageFor(model => model.Phone)
                </div>
                <label style="font-size:15px;margin-left:20px;">密码：</label>
                <div>
                    @Html.EditorFor(model => model.Password)
                    @Html.ValidationMessageFor(model => model.Password)
                    @Html.ActionLink("忘记密码", "ForgetPassword", "User")
                </div>
                <div>
                    <button style="width:200px; margin-top:15px; " class="btn btn-md btn-primary" type="submit">登录</button>
                </div>
                <div>
                    <button style="width:200px; margin-top:15px;   " class="btn btn-md btn-danger" type="reset">重置</button>
                </div>
            </div>
            <div class="col-md-6">
                <img src="~/common/img/img2.jpg" style="width:350px; height:380px" />
            </div>
        </div>

    </fieldset>

}